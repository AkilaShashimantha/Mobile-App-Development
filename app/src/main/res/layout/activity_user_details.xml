<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#FFFFFF">

    <!-- Back Button -->

    <!-- Profile Image -->

    <!-- Profile Title -->
    <ImageView
        android:id="@+id/profileImage"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:background="@color/ic_launcher_background"
        android:scaleType="centerCrop"
        android:src="@drawable/pro_pic" />

    <TextView
        android:id="@+id/txtProfile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="8dp"
        android:text="Profile"
        android:textColor="#0AB108"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- Input Fields -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp">

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/profile_user" />

            <EditText
                android:id="@+id/fName"
                android:layout_width="150dp"
                android:layout_height="53dp"
                android:hint="First Name"
                android:paddingStart="20dp"
                android:textColor="#504E4E"
                android:textColorHint="#504E4E" />

            <EditText
                android:id="@+id/lName"
                android:layout_width="194dp"
                android:layout_height="53dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Last Name"
                android:inputType="text"
                android:textColor="#504E4E"
                android:textColorHint="#504E4E" />

        </LinearLayout>

        <!-- Contact Number -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@mipmap/phone_call" />

            <EditText
                android:id="@+id/etContact"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="   Enter Contact Number"
                android:inputType="phone"
                android:textColor="#504E4E"
                android:textColorHint="#504E4E" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:src="@mipmap/email" />

            <EditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="   Enter Email"
                android:inputType="textEmailAddress"
                android:textColor="#504E4E"
                android:textColorHint="#504E4E" />
        </LinearLayout>

        <!-- Address -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="45dp"
                android:src="@mipmap/gps" />

            <EditText
                android:id="@+id/etAddress"
                android:layout_width="match_parent"
                android:layout_height="53dp"
                android:hint="   Enter Address"
                android:textColor="#504E4E"
                android:textColorHint="#504E4E" />
        </LinearLayout>
    </LinearLayout>

    <!-- Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="16dp">

        <Button
            android:id="@+id/btnUpdate"
            android:layout_width="163dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="8dp"
            android:background="#0AB108"
            android:text="Confirm Changes"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Submit Button -->

</LinearLayout>
