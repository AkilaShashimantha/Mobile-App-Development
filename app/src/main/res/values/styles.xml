<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="ToolbarTitleStyle" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">22sp</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="SpinnerStyle" >
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@android:color/white</item>

    </style>

    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CustomButtonStyle">
        <item name="android:background">@color/veggreen</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CustomPopupMenu" parent="ThemeOverlay.AppCompat.Dark">
        <!-- Background color -->
        <item name="android:background">@color/black</item>
        <!-- Text color for menu items -->
        <item name="android:textColor">@color/white</item>
        <!-- Icon tint -->
        <!-- Divider color (optional) -->
        <item name="android:divider">@color/grey</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="ToolbarTitleTextAppearance" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item> <!-- Set your desired size -->
        <!-- Optional -->
    </style>

</resources>